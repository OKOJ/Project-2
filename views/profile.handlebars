<div class="row">
  <div class="col-12 offset-2">
    <h2>What would you like to put on a market today.</h2>
    <div class="row">
      <div class="col-6">
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Product Name</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text"
              placeholder="Enter Product Name">
          </div>
          <div class="form-group">
            <label for="example-price">Product Price</label>
            <input type="text" id="example-price" class="form-control" aria-describedby="example-price"
              placeholder="Enter Product Price">
          </div>
          <div class="form-group">
            <label for="example-quantity">Quantity</label>
            <input type="text" id="example-quantity" class="form-control" aria-describedby="example-quantity"
              placeholder="Enter Product Quantity">
          </div>

          {{!-- Working on this - Corbin --}}
          <div class="form-group">
            <label for="example-quantity">Product Image</label>
            <input type="text" id="example-image" class="form-control" aria-describedby="example-image"
              placeholder="Add Image URL">
          </div>
          {{!-- End of working area - Corbin --}}


          <div class="form-group">
            <label for="example-description">Product Description</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description"
              placeholder="Enter Product Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
      </div>
      <div class="col-6">
        <h5>Your market stand:</h5>
        <br>
        <ul id="example-list" class="list-group">
          {{#each user.Examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-outline-success float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>